{
   "kind":"ReplicationController",
   "apiVersion":"v1",
   "metadata":{
      "name":"mariadb-master",
      "labels":{
         "app":"mariadb",
         "role":"master"
      }
   },
   "spec":{
      "replicas":1,
      "selector":{
         "app":"mariadb",
         "role":"master"
      },
      "template":{
         "metadata":{
            "labels":{
               "app":"mariadb",
               "role":"master"
            }
         },
         "spec":{
            "containers":[
               {
                  "name":"mariadb-master",
                  "image":"mariadb:10.2",
                  "ports":[
                     {
                        "name":"mariadb-server",
                        "containerPort":3306
                     }
                  ],
                  "args":[
                     "--character-set-server=utf8"
                  ],
                  "env":[
                     {
                        "name": "MYSQL_ROOT_PASSWORD",
                        "value": "liferay"
                     },
                     {
                        "name": "MYSQL_DATABASE",
                        "value": "lportal"
                     }
                  ]
               }
            ]
         }
      }
   }
}